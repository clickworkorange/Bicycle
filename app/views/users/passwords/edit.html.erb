<h1><%= t("user.change_password") %></h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <p>
    <%= f.label :password, t("user.new_password") %>
    <%= f.password_field :password, autofocus: true, required: true, minlength: @minimum_password_length, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em>(<%= t("user.password_requirement", length: @minimum_password_length) %>)</em>
    <% end %>
  </p>

  <p>
    <%= f.label :password_confirmation, t("user.confirm_new_password") %>
    <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
  </p>

  <p><%= f.submit t("user.change_password") %></p>
<% end %>

<%= render "users/shared/links" %>
