<h1><%= t("user.sign_up") %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email, required: true, autocomplete: "email" %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password, required: true, minlength: @minimum_password_length, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em>(<%= t("user.password_requirement", length: @minimum_password_length) %>)</em>
    <% end %>
  </p>

  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, required: true, minlength: @minimum_password_length, autocomplete: "new-password" %>
  </p>

  <p><%= f.submit t("user.sign_up") %></p>
<% end %>

<%= render "users/shared/links" %>
