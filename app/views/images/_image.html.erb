<figure>

  <%= image_tag(url_for(image.image_file.variant(resize_to_limit: [400, nil]))) %>

  <p>
    <strong>Caption:</strong>
    <%= image.caption %>
  </p>

  <p>
    <strong>Alt text:</strong>
    <%= image.alt_text %>
  </p>

  <p>
    <strong>Page:</strong>
    <%= image.page.title %>
  </p>

</figure>
