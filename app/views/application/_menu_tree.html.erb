<%= content_tag :li do %>
  <%= link_to page.title, page %>
  <% if page.children.live.any? && (@page.id == page.id || @page.is_descendant_of?(page)) %>
    <%= content_tag :ul do %>
      <% page.children.live.each do |child| %>
        <%= render :partial => "menu_tree", :locals => {:page => child }%>
      <% end %>
    <% end %>
  <% end %>
<% end %>