<nav>
  <ul>
  <% Page.roots.live.each do |page| %>
    <li><%= link_to page.title, page %>
      <% if page.children.any? %>
        <ul>
        <% page.children.live.each do |child| %>
          <li><%= link_to child.title, [page, child] %></li>
        <% end %>
        </ul>
      <% end %>
    </li>
  <% end %>
  </ul>
</nav>