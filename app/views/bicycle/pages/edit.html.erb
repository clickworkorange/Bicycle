<h1><%= t("bicycle.page.edit") %></h1>

<%= render "form", page: @page %>

<%= button_to t("bicycle.page.destroy"), [:bicycle, @page], method: :delete, class: "no" %>

<h2>Images</h2>

<% # TODO: make use of the <dialog> element! %>

<% @page.images.each do |image| %>
    <%= link_to image_tag(image.image_file.square.url), edit_bicycle_page_image_path(@page, image) %>
<% end %>

<%= link_to t("bicycle.image.new"), new_bicycle_page_image_path(@page), class: "button" %>