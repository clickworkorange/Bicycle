<%= content_tag :li do %>
  <%= content_tag(:div) do %>
    <%= link_to edit_bicycle_page_path(page) do %>
      <%= svg_icon(page.template) %>
      <%= page.title %>
    <% end %>
    <%= button_to("up", bicycle_page_move_path(page), params: {dir: "up"}, disabled: page.self_and_siblings.first == page) %>
    <%= button_to("dn", bicycle_page_move_path(page), params: {dir: "dn"}, disabled: page.self_and_siblings.last == page) %>
  <% end %>
  <% if page.children.any? %>
    <%= content_tag :ul do %>
      <% page.children.each do |child| %>
        <%= render :partial => "index_tree", :locals => {:page => child} %>
      <% end %>
    <% end %>
  <% end %>
<% end %>