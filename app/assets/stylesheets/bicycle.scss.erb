@use "<%= Rails.application.site_asset("_global.scss") %>" as *;
@use "shared" as *;

/* app/assets/bicycle.scss */

body.bicycle {
background-image: url("bicycle.png");
}

body > header {
position: fixed;
width: 100%;
}
	body > header nav {
	}
		body > header form, body > header nav {
		float: left;
		}
		header button, nav button, nav a.button {
		display: inline-block;
		margin-right: .5em;
		}

main {
padding-top: 3em;
}

article {
padding: .5em;
background-color: $colour-bg;
//border-radius: 1em;
}
	article > form {
	// display: flex;
	// flex-direction: column;
	}
	    input[type=checkbox] {
	    width: auto;
	    }
section {
margin-bottom: 2em;
}
body.images.edit article img {
width: 100px;
}

body.index table {
box-sizing: border-box;
table-layout: fixed;
border-spacing: 0;
width: 100%;
max-width: 40em;
//margin: 0 auto;
}
	body.pages.index table td {
	width: 2em;
	padding: .2em;
	white-space: nowrap;
	}
	body.comments.index table td {
	padding: .5em;
	}
		body.comments.index table td p:last-child {
		margin-bottom: 0;
		}
	body.pages.index table td, body.comments.index table tr:nth-child(3n) td {
	border-bottom: 1px dashed $colour-edges;
	}
	body.pages.index table td.status {
	width: 1.08em; //19px
	padding: 0;
	}
	body.pages.index table td:first-child {
	width: 100%;
	}
	body.pages.index table tr:last-child td {
	border: none;
	}
	body.pages.index table td a {
	display: block;
	overflow: hidden;
	max-width: 100%;
	white-space: nowrap;
	text-overflow: ellipsis;
	}
	body.pages.index table svg {
	margin-top: .2em;
	margin-bottom: -.2em;
	fill: currentColor;
	//shape-rendering: crispEdges;
	}
	body.pages.index table form {
	display: inline-block;
	}
	body.pages.index table button {
	width: 2em;
	height: 2em;
	padding: .2em;
	}

body.statistics {}
	body.statistics.index table {
	}
	body.statistics.index table td:last-child {
	width: 2em;
	text-align: right;
	}
	body.statistics.index table.page_list td:first-child {
	width: 1.5em;
	}
	body.statistics.index table.page_list td:nth-child(2), body.statistics.index table.referrers td:first-child {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	}
	body.statistics.index table svg {
	margin-top: .1em;
	margin-bottom: -.1em;
	fill: currentColor;
	}
	body.statistics article nav {
	width: max-content;
	margin: 1em auto;
	}
h1 {
margin-top: .5em;
}
p.notice, p.alert {
margin: 0 -.5em;
}
